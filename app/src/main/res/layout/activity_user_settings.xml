<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.UserSettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cardview_light_background"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Settings"
            app:titleTextColor="@android:color/black"/>
    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/cardview_dark_background"
        android:layout_below="@+id/app_bar"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/app_bar">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Settings"
            android:textSize="14sp"
            android:fontFamily="@font/mo_me"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/editInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:text="Edit Info"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/SettingsLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editInfo"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:text="Logout"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        />

    <View
        android:id="@+id/view_id"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/SettingsLogout"/>

    <LinearLayout
        android:id="@+id/l18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/view_id">

        <TextView
            android:id="@+id/textView108"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textSize="14sp"
            android:fontFamily="@font/mo_me"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/security_questions_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l18"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:text="Set Security Questions?"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        />

    <View
        android:id="@+id/view_id7"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/security_questions_btn"/>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/view_id7">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App"
            android:textSize="14sp"
            android:fontFamily="@font/mo_me"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l3"
        android:text="About"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Part of Ecommerce Project "
        android:fontFamily="@font/mo_me"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true" />

</RelativeLayout>